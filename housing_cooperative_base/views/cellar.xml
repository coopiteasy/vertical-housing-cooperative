<odoo>
    <record id="view_cellar_form" model="ir.ui.view">
        <field name="name">view_cellar_form</field>
        <field name="model">hc.cellar</field>
        <field name="inherit_id" ref="housing_cooperative_base.view_premise_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <group name="rent" position="after">
                <field name="premise_id" class="oe_inline" readonly="1" invisible="1" attrs="{'required': [('id', '!=', False)]}"/>
                <group name="spatial">
                    <field name="floor"/>
                    <field name="surface"/>
                </group>
                <group name="location">
                    <field name="street"/>
                    <field name="street_number"/>
                    <field name="municipality"/>
                    <field name="zip_code"/>
                    <field name="country_id" options="{'no_create': True}"/>
                    <field name="state_id" options="{'no_create': True}"/>
                </group>
            </group>
        </field>
    </record>

    <record id="cellar_view_action" model="ir.actions.act_window">
        <field name="name">Cellars</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hc.cellar</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
