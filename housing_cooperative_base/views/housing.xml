<odoo>
    <record id="view_housing_form" model="ir.ui.view">
        <field name="name">view_housing_form</field>
        <field name="model">hc.housing</field>
        <field name="inherit_id" ref="housing_cooperative_base.view_premise_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <group name="rent" position="after">
                <field name="premise_id" class="oe_inline" readonly="1" invisible="1" attrs="{'required': [('id', '!=', False)]}"/>
                <group>
                    <field name="building_id" options="{'no_create': True}"/>
                    <field name="floor"/>
                    <field name="keys"/>
                    <field name="nb_keys"/>
                    <field name="industrial_services"/>
                    <field name="is_arcade"/>
                </group>
                <group>
                    <field name="housing_plan_id" options="{'no_create': True}"/>
                    <field name="nb_rooms"/>
                    <field name="surface"/>
                    <field name="suggested_social_share"/>
                    <field name="social_share"/>
                </group>
            </group>
        </field>
    </record>

    <record id="housing_view_action" model="ir.actions.act_window">
        <field name="name">Housings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hc.housing</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
