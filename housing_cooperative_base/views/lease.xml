<odoo>
    <record id="view_hc_lease_form" model="ir.ui.view">
        <field name="name">view_hc_lease_form</field>
        <field name="model">hc.lease</field>
        <field name="arch" type="xml">
            <form string="lease_form">
                <header>
                    <button name="create_contract"
                            string="Create contract"
                            type="object"
                            attrs="{'invisible': [('contract_id', '!=', False)]}"
                            class="oe_highlight"/>
                    <button name="create_invoice"
                            string="Create Next Invoice"
                            type="object"
                            attrs="{'invisible': [('contract_id', '=', False)]}"
                            class="oe_highlight"/>
                    <button name="create_deposit_invoice"
                            string="Create Deposit Invoice"
                            type="object"
                            attrs="{'invisible': [('deposit_invoice_id', '!=', False)]}"
                            class="oe_highlight"/>

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_get_attachment_tree_view" class="oe_stat_button" icon="fa-book" type="object">
                            <field name="attachment_number" widget="statinfo" string="Documents"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="tenant_id" options="{'no_quick_create': True}"/>
                            <field name="signatory_ids" widget="many2many_tags" options="{'no_quick_create': True}"/>
                            <field name="inhabitant_ids" widget="many2many_tags" options="{'no_quick_create': True}"/>
                            <field name="start"/>
                            <field name="expected_end"/>
                            <field name="effective_end"/>
                            <field name="note"/>
                        </group>
                        <group>
                            <field name="suggested_rent"/>
                            <field name="suggested_charges"/>
                            <field name="rent"/>
                            <field name="charges"/>
                            <field name="deposit"/>
                        </group>
                        <group>
                            <field name="contains_arcade"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="premises" string="Premises">
                            <group>
                                <field name="lease_line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="premise_id" options="{'no_create': True}"/>
                                        <field name="code"/>
                                        <field name="state"/>
                                        <field name="rent"/>
                                        <field name="charges"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page name="invoices" string="Invoices">
                            <group>
                                <field name="contract_id" context="{'form_view_ref': 'contract.contract_contract_form_view'}"/>
                                <field name="deposit_invoice_id" invisible="1"/>
                                <field name="invoice_ids" context="{'form_view_ref': 'account.invoice_form'}">
                                    <tree>
                                        <field name="reference"/>
                                        <field name="name"/>
                                        <field name="date_invoice"/>
                                        <field name="amount_untaxed_invoice_signed"/>
                                        <field name="amount_tax_signed"/>
                                        <field name="amount_total_signed"/>
                                        <field name="residual_signed"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="lease_view_tree" model="ir.ui.view">
        <field name="name">lease_view_tree</field>
        <field name="model">hc.lease</field>
        <field name="arch" type="xml">
            <tree string="lease_tree">
                <field name="name"/>
                <field name="start"/>
                <field name="end"/>
                <field name="tenant_id"/>
                <field name="rent"/>
                <field name="charges"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="lease_view_search" model="ir.ui.view">
        <field name="name">lease_view_search</field>
        <field name="model">hc.lease</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="tenant_id"/>
                <field name="signatory_ids"/>
                <field name="inhabitant_ids"/>
                <field name="premise_ids" string="Premise or Code"
                       filter_domain="['|', ('premise_ids.name','ilike',self), ('premise_ids.code','ilike',self)]"/>
                <filter name="filter_contains_arcade"
                    string="Contains Archade"
                    domain="[('contains_arcade','=',True)]"/>
            </search>
        </field>
    </record>

    <record id="lease_view_action" model="ir.actions.act_window">
        <field name="name">Leases</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hc.lease</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="lease_line_view_tree" model="ir.ui.view">
        <field name="name">lease_line_view_tree</field>
        <field name="model">hc.lease.line</field>
        <field name="arch" type="xml">
            <tree string="lease_line_tree">
                <field name="building_id"/>
                <field name="premise_id"/>
                <field name="tenant_id"/>
                <field name="lease_id"/>
                <field name="start"/>
                <field name="end"/>
            </tree>
        </field>
    </record>
</odoo>
